<!DOCTYPE html>
<html>
  <head>
    <title>BookStore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'hello_react' %>
  </head>

  <body>

  <% if customer_signed_in? %>
    <div id="root">
    </div>
  <% else %>
    <% if controller_name == 'sessions' || controller_name == 'registrations' %>
    <% else %>
      <%= render 'shared/welcome_message' %>
    <% end %>
  <% end %>

 <div class="container">
      <div class="row ">
       <div class="col-sm-3 ">
          <% if customer_signed_in? %>
            Signed in as <%= current_customer.email %>. <%= link_to 'Sign out', destroy_customer_session_path, method: :delete, class: 'btn btn-primary' %>
          <% else %>
            <%= link_to 'sign in' , new_customer_session_path,  class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    <div>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
